<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <!-- Pantalla donde se editan datos -->
    <RelativeLayout
        android:id="@+id/vista_editar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_dark"
        android:visibility="gone">

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/edit_icon"
            android:text="EDITAR"
            android:textColor="#fff"
            android:textSize="13dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Pantalla donde se BORRAN datos -->
    <RelativeLayout
        android:id="@+id/vista_borrar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:visibility="gone">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="BORRAR"
            android:textColor="#fff"
            android:textSize="13dp" />
    </RelativeLayout>

    <!-- Pantalla principal donde se muestra la lista -->
    <RelativeLayout
        android:id="@+id/vista_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/titulo1_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/titulo2_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/titulo1_vp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="17dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/description_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo1_vp"
            android:layout_marginTop="5dp"
            android:textSize="12dp" />
    </RelativeLayout>
</FrameLayout>