<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matriculaapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_school"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".Activities.AdmProfesorActivity"
            android:label="Módulo Profesores"
            android:theme="@style/AppTheme2"></activity>
        <activity
            android:name=".Activities.ModAgrProfesorActivity"
            android:label="Profesor"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Activities.ModAgrCursoActivity"
            android:label="Curso"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Activities.AdmCursoActivity"
            android:label="Módulo Cursos"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Activities.ModAgrCarreraActivity"
            android:label="Carrera"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Activities.AdmCarreraActivity"
            android:label="Módulo Carreras"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Activities.ModAgrEstudianteActivity"
            android:label="Estudiante"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Activities.AdmEstudianteActivity"
            android:label="Módulo Estudiantes"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="Gestión MLA"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.NavDrawerActivity"
            android:label="Menú Matrícula"
            android:theme="@style/AppTheme2" />
    </application>

</manifest>